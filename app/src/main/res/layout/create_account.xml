<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="154dp"
        android:layout_height="44dp"
        android:text="Create Account"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="-5dp" />

    <EditText
        android:id="@+id/firstNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/lastNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameField" />

    <EditText
        android:id="@+id/emailFieldAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameField" />

    <EditText
        android:id="@+id/passwordFieldAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailFieldAccount" />

    <EditText
        android:id="@+id/confirmPasswordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordFieldAccount" />

    <Button
        android:id="@+id/makeAccountButton"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:elevation="0dp"
        android:text="create account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/firstNameError"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="26dp"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/firstNameField"
        app:layout_constraintTop_toTopOf="@+id/firstNameField" />

    <TextView
        android:id="@+id/lastNameError"
        android:layout_width="164dp"
        android:layout_height="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="26dp"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/lastNameField"
        app:layout_constraintTop_toTopOf="@+id/lastNameField" />

    <TextView
        android:id="@+id/emailError"
        android:layout_width="162dp"
        android:layout_height="23dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/emailFieldAccount"
        app:layout_constraintTop_toTopOf="@+id/emailFieldAccount" />

    <TextView
        android:id="@+id/passwordError"
        android:layout_width="158dp"
        android:layout_height="26dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="26dp"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/confirmPasswordField"
        app:layout_constraintTop_toTopOf="@+id/confirmPasswordField" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="103dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Create Lawyer Account"
        android:textOff="normal account"
        android:textOn="lawyer account"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="creare lawyer account"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/barCodeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Bar Code"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordField" />

    <TextView
        android:id="@+id/barCodeError"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="28dp"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/barCodeField"
        app:layout_constraintTop_toTopOf="@+id/barCodeField" />

    <EditText
        android:id="@+id/addressField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Law Firm Address"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barCodeField" />

    <TextView
        android:id="@+id/addressError"
        android:layout_width="146dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="23dp"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/addressField"
        app:layout_constraintTop_toTopOf="@+id/addressField" />

</android.support.constraint.ConstraintLayout>